
@model IEnumerable<ONLINEFOODMOLL.Models.Photo>


@*@model ONLINEFOODMOLL.Models.Photo*@
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}



<head>

    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>

        #a1 {
            display: none;
        }
    </style>
</head>



<p>
    @using (Html.BeginForm("Index", "Photo", FormMethod.Get))
    {
        @*<b>Search By :</b>*@ @Html.RadioButton("searchBy", "Name", true, new { @id = "a1" }) @*<text>Name</text>*@

        <div class="row">
                <div class="col-3">
                    @Html.TextBox("search", "", new { @class = "form-control" })
                </div>
                <div class="col-1">
                    <input type="submit" value="Search" class="btn btn-outline-info " />
                </div>
                <div class="col-8"></div>
            </div>


    }
    </ p >


    @Html.Raw(TempData["CreateMessage"])
    @Html.Raw(TempData["UpdateMessage"])
    @Html.Raw(TempData["DeleteMessage"])
<p>
    @Html.ActionLink("Create New", "Create", "Photos", new { @class = "btn btn-info mt-2" })
</p>



<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-4 col-lg-4 mt-1">

                <div class="card" id="first">
                    @*<div class="card col-sm-12 col-md-6 col-lg-4 col-xl-3 mt-3 mb-3">*@
                    <img src="@Url.Content(item.image_path)" class="card-img-top" alt="..." style="height:300px;">
                    <div class="card-body">
                        @*<h5 class="card-title">@item.standard</h5>*@
                        <p class="card-text">@item.p_name</p>
                        <p class="card-text">@item.p_price</p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.p_id }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.p_id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.p_id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>


